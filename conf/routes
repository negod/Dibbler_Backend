# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# DEFAULT
GET		/							controllers.Application.index()

# EVENTS
GET		/v1/events					controllers.v1.EventService.getEvents(lat: Double, lon: Double, radius: Int, lang: String)
GET		/v1/events/:id				controllers.v1.EventService.getEventById(id: String, lang: String)

#Categories
GET     /v1/categories              controllers.v1.CategoryService.getAllCategories(lang: String)


# Get all of everything (Just test so see its working)

GET     /companies                  controllers.Application.getAllCompanies()
GET     /companyUsers               controllers.Application.getAllCompanyUsers()
GET     /events                     controllers.Application.getAllEvents()
GET     /eventTexts					controllers.Application.getAllEventTexts()
GET     /eventTypes					controllers.Application.getAllEventTypes()
GET     /filters                    controllers.Application.getAllFilters()
GET     /followerEvents             controllers.Application.getAllFollowerEvents()
GET     /followerReqs               controllers.Application.getAllFollowerReq()
GET     /movements                  controllers.Application.getAllMovements()
GET     /roles                      controllers.Application.getAllRoles()
GET     /sessions                   controllers.Application.getAllSessions()
GET     /settings       	        controllers.Application.getAllSettings()
GET     /users    		            controllers.Application.getAllUsers()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
